<p id="notice"><%= notice %></p>

<div class="user_show_container">
	<div class="user_show_left">
		<p>
			<%= gravatar_for @user.email, :class => 'img_gravatar', :alt => "#{@user.name} #{@user.last_name}"  %>
		</p>
	</div>
	<div class="user_show_right">
		<p>
		  <b>Name:</b>
		  <%= @user.name %>
		</p>
		
		<p>
		  <b>Last name:</b>
		  <%= @user.last_name %>
		</p>
		
		<p>
		  <b>Email:</b>
		  <%= @user.email %>
		</p>
		
		<p>
		  <b>Twitter login:</b>
		  <%= @user.twitter_login %>
		</p>
	</div>
	<div class="user_show_tweets">
		<span style="float:right;">
			<a href="#" onclick="window.User.refresh_tweets('tweets_container', <%= @user.id %>);return false;">refresh tweets</a>
		</span>
		<h1>Tweets</h1>
		<div id="tweets_container">		
			<!-- async load content -->			
		</div>	
	</div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<script type="text/javascript">
	window.User.refresh_tweets('tweets_container', <%= @user.id %>)
</script>
